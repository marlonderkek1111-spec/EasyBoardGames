{
  "version": 2,
  "name": "easyboardgames",
  "builds": [{ "src": "**/*.html", "use": "@vercel/static" }],
  "routes": [
    { "src": "/games/tictactoe/([A-Z]{5}-[A-Z0-9]{4})", "dest": "/games/tictactoe/index.html" },
    { "src": "/games/connect4/([A-Z]{5}-[A-Z0-9]{4})", "dest": "/games/connect4/index.html" },
    { "src": "/games/gomoku/([A-Z]{5}-[A-Z0-9]{4})", "dest": "/games/gomoku/index.html" },
    { "src": "/games/battleship/([A-Z]{5}-[A-Z0-9]{4})", "dest": "/games/battleship/index.html" }
  ],
  "headers": [
    { "source": "/(.*)", "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }] },
    { "source": "/**/*.html", "headers": [{ "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }] }
  ]
}
